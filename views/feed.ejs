<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% posts.forEach(function(elem){ %>
           <div class="w-32 card">
            <div class=" w-full h-40 rounded-lg bg-zinc-700 overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>">
            </div>
            <h5 class="mt-2 text-sm  font-semibold"><%= elem.title %></h5>
            <h3 class="text-xs font-semibold mt-1">@<%=elem.user.username%></h3>
        </div> 
        <% }) %> 
    </div>
</div>
<% include ./partials/footer.ejs %>