<% include ./partials/header.ejs %> 
 <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a new post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2  mt-5" type="file" name="postimage">
        <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-5 text-zinc-800" type="text" placeholder="Title" name="title">
        <textarea class="block w-1/3 px-3 py-2 border-2 rounded-md mt-5 text-zinc-800" type="text" placeholder="Description" name="description" class="block w-1/3 h-40 py-2 border-2 rounded-md "></textarea>
        <input class="block w-1/3 px-3 py-2  rounded-md mt-5 bg-red-600 font-semibold" type="submit" value="Upload">
    </form>
 </div>
