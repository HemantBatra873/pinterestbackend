<% include ./partials/header.ejs %>
<div
  class="w-full h-screen flex items-center justify-center bg-zinc-300"
>
  <div class="w-[25vw] bg-zinc-100 px-20 py-10 rounded-[40px]">
    <h1
      class="leading-none text-3xl font-semibold text-zinc-5 00 capitalize text-center mb-7"
    >
      Welcome to pinterest.
    </h1>
    <form action="/login" method="post">
      <input
        class="border-2 rounded-md w-full mt-2 px-3 py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded-md w-full mt-2 px-3 py-2"
        type="password"
        name="password"
        placeholder="password"
      />
      <a href="#" class="inline-block mt-2 font-semibold">Forgot password?</a>
      <input
        class="border-2 block w-full mt-2 px-3 py-2 bg-red-600 rounded-full text-white font-semibold"
        type="submit" value="Login"
      />
      <p class="text-center text-xs font-semibold mt-3 w-2/3 mx-auto">
        By continuing, you agree to Pinterest's Terms of Service and acknowledge
        you've read our Privacy Policy. Notice at collection.
      </p>
    </form>
    <a class="inline-block font-semibold text-center w-full mt-4" href="/register">Don't have an account? SignUp now</a>
  </div>
</div>
<% include ./partials/footer.ejs %>
